
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Blog Dashboard</title>
  <link rel="stylesheet" href="/dashboard.css">
 
</head>
<body>
  <div class="dashboard">
    <nav class="sidebar">
      <h1 class="logo">MyBlog</h1>
      <ul class="nav-links">
        <li><a href="#" class="nav-item" onclick="showSection('update-content')">Posts</a></li>
        <li><a href="#" class="nav-item" onclick="showSection('settings')">Settings</a></li>
        <li><a href="#" class="nav-item" onclick="showSection('analytics')">Analytics</a></li>
      </ul>
      
      
    </nav>
    <div class="main-content">
      <!-- Content and Settings Sections -->
    
      <div id="update-content" class="content-section">
        <h2>Update Content</h2>
        <form id="update-form" class="content-form">
          <div class="form-group">
            <label for="article-id">Article ID:</label>
            <input type="text" id="article-id" name="article-id" required>
        </div>
        
            <div class="form-group">
                <label for="title">Title:</label>
                <input type="text" id="title" name="title" required>
            </div>
            <div class="form-group">
                <label for="author">Author:</label>
                <input type="text" id="author" name="author" required>
            </div>
            <div class="form-group">
                <label for="content">Content:</label>
                <textarea id="content" name="content" required></textarea>
            </div>
            <div class="form-group">
                <label for="image">Image URL:</label>
                <input type="text" id="image" name="image" required>
            </div>
            <button type="button" class="btn-submit" onclick="updateContent()">Update Content</button>
        </form>
    </div>
    
    </div>
      <!-- Settings Section -->
     
        <!-- Add more settings groups as needed -->
      </div>
    </div>
  </div>
  <!-- You need to include Font Awesome for the icons -->
  <script src="https://kit.fontawesome.com/yourkit.js"></script>
  <script src="/script1.js"></script>

  
</body>
</html>
